<!doctype html>
<html>
<head>    
    <meta charset="utf-8" />
    <meta name=viewport content="width=device-width, initial-scale=1" />    
      @if(model.metaDescription){
        <meta name="description" content="@model.metaDescription" />
      }
    <link rel="icon" href="/favicon.ico" type="image/x-icon" /> 
    <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon" /> 
    <title>@model.title</title>    
        
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css" type="text/css">
    <link href="/css/style.min.css" type="text/css" rel="stylesheet"/>
    @if(model._locals.isAdmin){
        <link href="/css/superstyle.min.css" type="text/css" rel="stylesheet"/>
      }
      
      <base href="/">
      
      <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/js/bootstrap.min.js" async=""></script>      
   
      @html.block("scripts_head")
</head>
<body>
    <div class="container">
        <header>        
            <nav class="navbar navbar-inverse navbar-static-top" role="navigation">
                <div class="container-fluid">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse" title="Toggle navigation">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <a href="/" class="navbar-brand">Home</a>                    
                    </div>
                    <div class="navbar-collapse collapse">
                      @if(model._locals.login){
                      <ul class="nav navbar-nav">
                            <li>
                                <a href="/exam">Test</a>
                            </li>
                          @if(model._locals.isAdmin){
                            <li>
                              <a href="/Admin">Admin</a>
                            </li>
                          }
                      </ul>
                      }
                      <ul id="languages" class="nav navbar-nav navbar-right">                        
                        @if(model._locals.login){
                          <li>
                            <a href="/logout">Logout</a>
                          </li>
                        }else{
                          <li>
                            <a href="/login">Login</a>
                          </li>
                        }                        
                      </ul>
                    </div>
                </div>           
            </nav> 
        </header>
        <div role="main">   
            @html.block("body") 
        </div>   
        <footer style="background-color:black;">
          <p>
            <br>
          </p>
        </footer>
    </div>    
   

  @html.block("scripts_body")


</body>
</html>